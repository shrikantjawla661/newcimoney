<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../common/commonHeader'); %>
</head>

<body>
    <div class="app app-auth-sign-in align-content-stretch d-flex flex-wrap justify-content-end">
        <div class="app-auth-background">

        </div>
        <div class="app-auth-container">
            <div class="logo"> 
                <a href="/">Card Insider</a>
            </div>
            <p class="auth-description">Please sign-in to your account and continue to the dashboard.<br>
                <br><span id="sign-in-error"></span>
			</p>

            <div class="auth-credentials m-b-xxl">
                <label for="signInEmail" class="form-label">Email address</label>
                <input type="email" class="form-control m-b-md" id="signInEmail" aria-describedby="signInEmail" placeholder="example@cardinsider.com" required>

                <label for="signInPassword" class="form-label">Password</label>
                <input type="password" class="form-control" id="signInPassword" aria-describedby="signInPassword" placeholder="&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;" required>
            </div>

            <div class="auth-submit">
                <a href="#" class="btn btn-primary" onclick="ValidateProcesSigninData()">Sign In</a>
        
            </div>
            <div class="divider"></div>
        
        </div>
    </div>

    <!-- Javascripts -->
    <script src="/./app/utils/assets/plugins/jquery/jquery-3.5.1.min.js"></script>
    <script src="/./app/utils/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="/./app/utils/assets/plugins/perfectscroll/perfect-scrollbar.min.js"></script>
    <script src="/./app/utils/assets/plugins/pace/pace.min.js"></script>
    <script src="/./app/utils/assets/js/main.min.js"></script>
    <script src="/./app/utils/assets/js/custom.js"></script>

</body>

</html>
<!DOCTYPE html>
<html lang="en">
  <!--begin::Head-->
  <head>
    <%- include('../common/head'); %>
  </head>
  <!--end::Head-->
  <!--begin::Body-->

  <body
    id="kt_body"
    class="app-blank bgi-size-cover bgi-position-center bgi-no-repeat"
  >
    <div class="d-flex flex-column flex-root">
      <style>
        body {
          background-image: url("/frontend/assets/media/auth/bg10.jpeg");
        }

        [data-theme="dark"] body {
          background-image: url("/frontend/assets/media/auth/bg10-dark.jpeg");
        }

        .disabled-link {
          pointer-events: none;
        }
      </style>
      <!--end::Page bg image-->
      <!--begin::Authentication - Sign-in -->
      <div class="d-flex flex-column flex-lg-row flex-column-fluid">
        <!--begin::Aside-->
        <div class="d-flex flex-lg-row-fluid">
          <!--begin::Content-->
          <div class="d-flex flex-column flex-center pb-0 pb-lg-10 p-10 w-100">
            <!--begin::Image-->
            <img
              class="theme-light-show mx-auto mw-100 w-250px w-lg-350px mb-10 mb-lg-20"
              src="/frontend/assets/images/login.png"
              alt=""
            />
            <img
              class="theme-dark-show mx-auto mw-100 w-150px w-lg-300px mb-10 mb-lg-20"
              src="/frontend/assets/images/login.png"
              alt=""
            />
            <!--end::Image-->
            <!--begin::Title-->
            <img
              style="height: 80px"
              src="/frontend/assets/images/card-insider-logo.png"
              alt=""
            />
            <!--end::Title-->
            <!--begin::Text-->
            <div class="text-gray-600 fs-base text-center fw-semibold">
              Check your credit score for free and get recommendation of <br />
              credit cards according to your credit score and much more.
            </div>
            <!--end::Text-->
          </div>
          <!--end::Content-->
        </div>
        <!--begin::Aside-->
        <!--begin::Body-->
        <div
          class="d-flex flex-column-fluid flex-lg-row-auto justify-content-center justify-content-lg-end p-12"
        >
          <div class="bg-body d-flex flex-center rounded-4 w-md-600px p-10">
            <form
              id="kt_account_profile_details_form"
              class="form fv-plugins-bootstrap5 fv-plugins-framework"
              novalidate="novalidate"
            ></form>
            <div class="w-md-400px animate__animated" id="step-1">
              <div class="form w-100" novalidate="novalidate" action="#">
                <div class="text-center mb-11">
                  <h1 class="text-dark fw-bolder mb-3">
                    Please complete your profile to continue
                  </h1>
                </div>
                <div class="row mb-6">
                  <div
                    class="col-lg-12 fv-row fv-plugins-icon-container fv-plugins-bootstrap5-row-valid"
                  >
                    <input
                      type="text"
                      id="name"
                      name="name"
                      class="form-control form-control-lg"
                      placeholder="Enter your name"
                      value=""
                    />
                    <div
                      class="fv-plugins-message-container invalid-feedback"
                    ></div>
                  </div>
                </div>
                <div class="row mb-6">
                  <div
                    class="col-lg-12 fv-row fv-plugins-icon-container fv-plugins-bootstrap5-row-valid"
                  >
                    <input
                      type="text"
                      id="phone"
                      name="phone"
                      class="form-control form-control-lg"
                      placeholder="Enter your phone number"
                      value=""
                    />
                    <div
                      class="fv-plugins-message-container invalid-feedback"
                    ></div>
                  </div>
                </div>
                <div class="row mb-6">
                  <div
                    class="col-lg-12 fv-row fv-plugins-icon-container fv-plugins-bootstrap5-row-valid"
                  >
                    <input
                      type="text"
                      id="email"
                      name="email"
                      class="form-control form-control-lg"
                      placeholder="Enter your email address"
                      value=""
                    />
                    <div
                      class="fv-plugins-message-container invalid-feedback"
                    ></div>
                  </div>
                </div>
                <div
                  class="d-flex flex-stack flex-wrap gap-3 fs-base fw-semibold mb-8"
                >
                  <div></div>
                </div>
                <div class="d-grid mb-10">
                  <button
                    type="submit"
                    id="kt_account_profile_details_submit"
                    class="btn btn-primary fv-plugins-bootstrap5-row-valid"
                  >
                    <span class="indicator-label">Continue</span>
                  </button>
                </div>
                <br />
                <a style="margin-left: 40%" href="/">Back to Home</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="/frontend/assets/plugins/global/plugins.bundle.js"></script>
    <script src="/frontend/assets/js/scripts.bundle.js"></script>
    <script src="/frontend/assets/js/custom/pages/user-profile/profile.js"></script>
  </body>
</html>
